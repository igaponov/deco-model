{
  "name": "deco-model",
  "version": "0.0.10",
  "description": "Decompression models",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "yarn run clean:dist && yarn run bundle:dist",
    "prepublishOnly": "yarn test && yarn build",
    "test": "node_modules/.bin/jest",
    "clean:dist": "rimraf dist && mkdir dist",
    "bundle:dist": "babel src --out-dir dist --ignore \"**/*.test.ts\" --extensions \".ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/igaponov/deco-model.git"
  },
  "keywords": [
    "decompression",
    "model",
    "diving"
  ],
  "author": "Igor Gaponov",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/igaponov/deco-model/issues"
  },
  "homepage": "https://github.com/igaponov/deco-model#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^24.9.0",
    "babel-jest": "^24.8.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/dist/index.js"
    }
  }
}
